{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "./",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "outDir": "build",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "exclude": ["build", "__test__/**", "**/node_modules", "**/.*/"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
